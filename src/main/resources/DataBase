create table car
(
    engine_id   int         not null,
    license     varchar(10) not null,
    cityid      int         not null,
    driver_name varchar(10) not null,
    model       varchar(10) not null,
    constraint car_engine_id_uindex
        unique (engine_id),
    constraint car___city
        foreign key (cityid) references city (city_id)
);

alter table car
    add primary key (engine_id);

create table city
(
    city_id   int auto_increment
        primary key,
    city_name varchar(10) not null
);

create table driver
(
    driver_id   bigint                  not null
        primary key,
    name        varchar(10)             not null,
    car_license varchar(10) default 'æ— ' null,
    rest_score  int         default 12  not null
);

create table violation
(
    drivername varchar(10)                         not null,
    violation  text                                not null,
    fine       int                                 not null,
    time       timestamp default CURRENT_TIMESTAMP not null on update CURRENT_TIMESTAMP,
    score      int                                 null
);